---
import Layout from "./Layout.astro";
import { format } from "date-fns";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <article class="blog-post">
    <header>
      <h1>{frontmatter.title}</h1>
      <div class="metadata">
        <time datetime={frontmatter.date}>
          {format(new Date(frontmatter.date), "MMMM d, yyyy")}
        </time>
        {
          frontmatter.author && (
            <span class="author">by {frontmatter.author}</span>
          )
        }
      </div>
    </header>
    <div class="content">
      <slot />
    </div>
  </article>
</Layout>

<style>
  .blog-post {
    max-width: 65ch;
    margin: 0 auto;
    padding: 2rem;
  }

  header {
    margin-bottom: 2rem;
  }

  h1 {
    font-size: 2.5rem;
    color: white;
    margin-bottom: 0.5rem;
  }

  .metadata {
    color: #94a3b8;
    font-size: 0.9rem;
  }

  .author {
    margin-left: 1rem;
  }

  .content {
    color: #e2e8f0;
    line-height: 1.7;
  }

  .content :global(h2) {
    font-size: 1.8rem;
    margin: 2rem 0 1rem;
    color: white;
  }

  .content :global(p) {
    margin-bottom: 1.5rem;
  }

  .content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
  }

  .content :global(code) {
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    padding: 0.2em 0.4em;
    border-radius: 0.25rem;
    font-size: 0.9em;
  }
</style>
